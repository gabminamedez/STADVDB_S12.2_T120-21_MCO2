<html>

    <head>
        <link rel="stylesheet" href="/css/styles.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

        <title><%= title %></title>
    </head>

    <body>
        <div class="container">
            <center>
                <h1>Get the average reviews per month of each neighbourhood in a given year last reviewed.</h1>
                <hr>

                <form method="post" action="/query3">
                    <div class="form-group">
                        <select required name="year" class="form-control">
                            <option value="" selected disabled hidden>Choose a year</option>
                            <option value="2019">2019</option>
                            <option value="2018">2018</option>
                            <option value="2017">2017</option>
                            <option value="2016">2016</option>
                            <option value="2015">2015</option>
                            <option value="2014">2014</option>
                            <option value="2013">2013</option>
                            <option value="2012">2012</option>
                            <option value="2011">2011</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
                <hr>

                <% if(typeof results == 'undefined') { %>
                    <h2 class="init">Configure the filters above and submit!</h2>
                <% } else if (typeof results != 'undefined' && results.length != 0) { %>
                    <h2>Average reviews per month for each neighbourhood given last_review_year = <%= year %></h2>
                    <table class="table">
                        <tr>
                            <th><h3>neighbourhood</h3></th>
                            <th><h3>avg_reviews</h3></th> 
                        </tr>
                        <% for(var i = 0; i < results.length; i++) { %>
                            <tr>
                                <td class="row"><%= results[i].neighbourhood %></td>
                                <td><%= results[i].avg_reviews %></td> 
                            </tr>
                        <% } %>
                    </table>
                <% } else { %>
                    <h2>Average reviews per month for each neighbourhood given last_review_year = <%= year %></h2>
                    <h3 class="err">No results found!</h3>
                <% } %>
            </center>
        </div>
    </body>

</html>