<html>

    <head>
        <link rel="stylesheet" href="/css/styles.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

        <title><%= title %></title>
    </head>

    <body>
        <div class="container">
            <center>
                <h1>Get all listings (name, room_type, price) with a certain room type below or equal to a specified price.</h1>
                <hr>

                <form method="post" action="/query1">
                    <div class="form-group">
                        <select required name="room_type" class="form-control">
                            <option value="" selected disabled hidden>Choose a room_type</option>
                            <option value="Private room">Private room</option>
                            <option value="Entire home/apt">Entire home/apt</option>
                            <option value="Shared room">Shared room</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input required name="price" type="number" class="form-control" placeholder="Add price">
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
                <hr>

                <% if(typeof results == 'undefined') { %>
                    <h2 class="init">Configure the filters above and submit!</h2>
                <% } else if (typeof results != 'undefined' && results.length != 0) { %>
                    <h2>Listings with room_type = <%= room_type %> and price <= <%= price %></h2>
                    <table class="table">
                        <tr>
                            <th><h3>name</h3></th>
                            <th><h3>room_type</h3></th> 
                            <th><h3>price</h3></th>
                        </tr>
                        <% for(var i = 0; i < results.length; i++) { %>
                            <tr>
                                <td class="row"><%= results[i].name %></td>
                                <td><%= results[i].room_type %></td> 
                                <td><%= results[i].price %></td>
                            </tr>
                        <% } %>
                    </table>
                <% } else { %>
                    <h2>Listings with room_type = <%= room_type %> and price <= <%= price %></h2>
                    <h3 class="err">No results found!</h3>
                <% } %>
            </center>
        </div>
    </body>

</html>