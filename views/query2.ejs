<html>

    <head>
        <link rel="stylesheet" href="/css/styles.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

        <title><%= title %></title>
    </head>

    <body>
        <div class="container">
            <center>
                <h1>Get the average price of each room type per neighborhood.</h1>
                <hr>

                <% if (typeof results != 'undefined' && results.length != 0) { %>
                    <h2>Average prices of each room type per neighborhood</h2>
                    <table class="table">
                        <tr>
                            <th><h3>room_type</h3></th>
                            <th><h3>neighbourhood</h3></th> 
                            <th><h3>avg_price</h3></th>
                        </tr>
                        <% for(var i = 0; i < results.length; i++) { %>
                            <tr>
                                <td class="row"><%= results[i].room_type %></td>
                                <td><%= results[i].neighbourhood %></td> 
                                <td><%= results[i].avg_price %></td>
                            </tr>
                        <% } %>
                    </table>
                <% } else { %>
                    <h3 class="err">No results found!</h3>
                <% } %>
            </center>
        </div>
    </body>

</html>