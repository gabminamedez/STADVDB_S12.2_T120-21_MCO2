<html>

    <head>
        <link rel="stylesheet" href="/css/styles.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

        <title><%= title %></title>
    </head>

    <body>
        <div class="container">
            <center>
                <h1>Get the average price of all listings by a certain host grouped by neighbourhood group.</h1>
                <hr>

                <form method="post" action="/query7">
                    <h4>Suggested names:</h4>
                    <h4>John, Loli, Eric, Rafel, Ben, Lisel, The Box House Hotel, Marlon</h4>
                    <div class="form-group">
                        <input required name="host_name" type="text" class="form-control" placeholder="Add host_name">
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
                <hr>

                <% if(typeof results == 'undefined') { %>
                    <h2 class="init">Configure the filters above and submit!</h2>
                <% } else if (typeof results != 'undefined' && results.length != 0) { %>
                    <h2>Average price of listings posted by host_name = <%= host_name %></h2>
                    <table class="table">
                        <tr>
                            <th><h3>host_name</h3></th>
                            <th><h3>neighbourhood_group</h3></th>
                            <th><h3>avg_price</h3></th>
                        </tr>
                        <% for(var i = 0; i < results.length; i++) { %>
                            <tr>
                                <td class="row"><%= results[i].host_name %></td>
                                <td><%= results[i].neighbourhood_group %></td>
                                <td><%= results[i].avg_price %></td>
                            </tr>
                        <% } %>
                    </table>
                <% } else { %>
                    <h2>Average price of listings posted by host_name = <%= host_name %></h2>
                    <h3 class="err">No results found!</h3>
                <% } %>
            </center>
        </div>
    </body>

</html>